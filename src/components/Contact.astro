<section id="contact" class="py-20">
    <div class="container mx-auto px-6">
        <div class="max-w-2xl mx-auto">
            <h3 class="text-3xl font-bold mb-12 text-center">✉️ Contact Me!</h3>
            <form class="space-y-6" id="contact-form">
                <div>
                    <input type="text" name="name" placeholder="Name" 
                           class="w-full bg-gray-700 rounded-lg p-4 focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>
                <div>
                    <input type="email" name="email" placeholder="Email" 
                           class="w-full bg-gray-700 rounded-lg p-4 focus:outline-none focus:ring-2 focus:ring-blue-400">
                </div>
                <div>
                    <textarea name="message" rows="5" placeholder="Message" 
                              class="w-full bg-gray-700 rounded-lg p-4 focus:outline-none focus:ring-2 focus:ring-blue-400"></textarea>
                </div>
                <button type="submit" 
                        class="w-full bg-blue-600 hover:bg-blue-700 py-3 rounded-lg font-medium transition">
                    Send Message
                </button>
            </form>
        </div>
    </div>
</section>

<script>
    import "/src/js/contact-form.js";
</script>