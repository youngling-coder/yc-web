
---
if (!import.meta.env.PUBLIC_UNSPLASH_API_TOKEN) {
  throw new Error('Missing public API key');
}
---

<section id="hero" class="min-h-screen flex items-center pt-20">
    <div class="container mx-auto px-6">
        <div class="flex flex-col md:flex-row items-center">
            <div class="md:w-1/2">
                <h2 class="text-4xl md:text-6xl font-bold mb-6">
                    üë®‚Äçüíª Building Robust
                    <div class="overflow-hidden h-[1em] inline-block relative">
                        <span class="absolute left-0 text-green-400">></span>
                        <span class="block rotate-words pl-[1.25em]">
                            <span class="block text-blue-400">APIs</span>
                            <span class="block text-blue-400">Software</span>
                            <span class="block text-blue-400">Databases</span>
                            <span class="block text-blue-400">Scripts</span>
                        </span>
                    </div>
                </h2>
                <p class="text-xl text-gray-400 mb-8">üëã Glad to see you here, my Friend!</p>
                <div class="flex gap-4">
                    <a href="#about" class="bg-blue-600 hover:bg-blue-700 px-6 py-3 rounded-lg font-medium transition">
                        About Me
                    </a>
                    <a href="#projects" class="border border-blue-400 text-blue-400 hover:bg-blue-400/10 px-6 py-3 rounded-lg font-medium transition">
                        View Projects
                    </a>
                </div>
            </div>
            
            <div class="md:w-1/2 mt-12 md:mt-0 relative">
                <div class="parallax-container w-4/5 mx-auto aspect-square rounded-2xl overflow-hidden shadow-2xl relative bg-gray-800">
                    <div id="image-loader" class="absolute inset-0 flex items-center justify-center"></div>
                    <div id="dynamic-image" class="absolute inset-0 bg-cover bg-center opacity-0 transition-opacity duration-500"></div>

                    <div class="code-overlay absolute inset-0 flex items-center justify-center p-6">
                        <pre class="bg-gray-900/90 backdrop-blur-sm rounded-lg p-4 w-full max-w-md text-sm md:text-base overflow-hidden">
                            <code id="animated-code" class="typewriter language-python font-mono text-blue-300 opacity-0"></code>
                        </pre>
                    </div>
                </div>
                <div class="absolute -top-10 -right-10 w-24 h-24 bg-blue-500/20 rounded-full blur-xl"></div>
                <div class="absolute -bottom-10 -left-10 w-32 h-32 bg-green-500/20 rounded-full blur-xl"></div>
            </div>
        </div>
    </div>
</section>

<script>
    import '/src/js/parallax-image-loader.js';
</script>